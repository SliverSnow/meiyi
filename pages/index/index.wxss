/**index.wxss**/
page {
  background: #f9f9f9;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  /* align-items: center; */
}
.world{
  width: 100%;
  height: 1200rpx;
}
/* 轮播宽度 */
.lunbo{
  width: 100%;
  margin-bottom: 8rpx;
}
.lunbo>.swiper-item{
  width: 100%;
  /* display: flex; */
}
/* 轮播图片宽度 */
.lunbo image{
  width: 100%;
  height: 100%;
}
/* 图片尺寸适应参数间隔  可以设置第一个图标的宽高和左右边距*/
.picture{
  width: 100%;
}
.picture image:first-child{
  width: 23%;
  margin-left:2%;
}
.picture image:nth-child(3){
  width: 23%;
  margin-right:2%;
}
.picture image:last-child{
  width: 22%;
  margin-right:3%;
}
.picture image{
  margin-top: 3rpx;
  height: 77rpx;
  width: 25%;
  justify-content: space-between;
}
/* background-size:contain;等比缩放 */
/* 按钮适应间隔 */
.but{
  width: 100%;
  height: 6%;
  /* margin-bottom: 8rpx; */
  justify-content: space-around;
  border-bottom: 2px solid rgb(199, 233, 241);
}
 .but button{
   width: 20%;
  height: 100%;
   font-size: 28rpx;
   color: black;
   margin-left: 4%;
  background-color: transparent;
  /* 设置按钮透明且不触发边框线 */
 }
  .but button>text{
    font-weight: 530;
    font-size: 32rpx;
    text-align: center;
  }
  /* 门店导航 */
  .box{
  height: 65%;
}
.flex-page {
  width: 100%;
  height: 100%;
  overflow:scroll;
  background-color: rgb(248, 246, 246);
}
.tab {
  float: left;
  width:50%;
  height: 100%;
  text-align: center;
  padding: 10rpx 0;
}
 
.topTabSwiper {
  height: 10%;
  background-color: rgb(248, 246, 246);
  font-size: 22px;
  color: rgb(69, 240, 174);
  zoom: 1;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
