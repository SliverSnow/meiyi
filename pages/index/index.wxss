/* 图片尺寸适应参数间隔 */
.picture image{
  margin-top: 5px;
  height: 100rpx;
  width: 110rpx;
  justify-content: space-between;
  padding-left: 36rpx;
  padding-right: 36rpx;
}
/* background-size:contain;等比缩放 */

/* 按钮适应间隔 */
 .but button{
   border: 0;
   width: 25%;
   justify-content: space-between;
   padding-left: 60rpx;
  padding-right: 60rpx;
 }

/* 广告区先用图片进行替代 */
.advert{
  width: 100%;
}
.advert image{
  width: 100%;
  height: 200rpx;
}

.bnt button{
  /* 使用 flex 布局的话需要显式的声明 page页面已声明 */
   border: 0;
   flex-direction: row; 
   justify-content: space-around;
   width: 50%;
/* 加上宽度可以左右排列 */
}


