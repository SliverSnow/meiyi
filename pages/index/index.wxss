/* 下块的布局 */
.box1{
  width: 40%;
  height:6%;
  text-align: center;
  font-weight: 800;
  font-size: 45rpx;
  position: fixed;
  bottom: 0;
  border-radius: 150rpx;
  background-color: rgba(153, 238, 180, 0.541);
  color:#AAAAAA;
}
.box1>view{
  margin-top:5%; 
}
.box2{
  width: 19%;
  height:10%;
  text-align: center;
  position: fixed;
  border-radius: 50%;
  right: 40%;
  bottom: 0;
  /* 镂空阴影 */
  -moz-box-shadow:0px 0px 1px #4ef5a7; 
  -webkit-box-shadow:0px 0px 1px #4ef5a7; 
  box-shadow:0px 0px 1px #4ef5a7;
}
.box>text{
   display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.box2>image{
  width: 90%;
  height: 100%;
  border-radius: 50%;
}
.box3{
  width: 40%;
  height:6%;
