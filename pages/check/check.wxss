/* 按钮样式=按钮的点击效果 阴影的大小*/
.btn-hover{
  height: 150rpx;
  width: 747rpx;
 
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  border: 1px solid rgb(206, 244, 255);

  box-shadow:0px 0px 8px white; 
  background-color: rgb(206, 244, 255);
}

/* 镂空按钮 点击阴影不宜太深  <view style="default""> △○</view> */

